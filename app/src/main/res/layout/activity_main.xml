<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="318dp"
            android:layout_height="60dp"
            android:inputType="numberDecimal"
            android:ems="12"
            android:textSize="15pt"
            android:id="@+id/moneyText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="46dp" android:layout_marginStart="46dp" android:layout_marginTop="153dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="47dp" android:layout_marginRight="47dp" android:hint="Amount"/>
    <Button
            android:text="Tip"
            android:layout_width="149dp"
            android:layout_height="52dp"
            android:id="@+id/button"
            android:backgroundTint="@color/green"
            android:textSize="12pt"
            android:bottomRightRadius="12dp"
            android:bottomLeftRadius="12dp"
            android:topRightRadius="12dp"
            android:topLeftRadius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="131dp" android:layout_marginStart="131dp" android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/editText1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="131dp" android:layout_marginRight="131dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"/>

</android.support.constraint.ConstraintLayout>