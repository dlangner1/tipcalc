<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TipButtonStyle">
        <item name="android:layout_width">149dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textSize">12pt</item>
        <item name="android:bottomRightRadius">12dp</item>
        <item name="android:bottomLeftRadius">12dp</item>
        <item name="android:topRightRadius">12dp</item>
        <item name="android:topLeftRadius">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button</item>
        <item name="android:layout_marginTop">46dp</item>
        <item name="android:layout_marginLeft">131dp</item>
        <item name="android:layout_marginStart">131dp</item>
        <item name="android:layout_marginEnd">131dp</item>
        <item name="android:layout_marginRight">131dp</item>
    </style>
    <style name="MoneyEditTextStyle">
